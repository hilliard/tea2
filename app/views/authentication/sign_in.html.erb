<h1>Sign In</h1>

<div class="registration-container col-md-6">


    <%= form_for User.new, :as => :user, :url => sign_in_path do |f| %>
      <div class="field">
          <%= f.label 'username or email:' %><br>
          <%= f.text_field :username %>
      </div>
      <div class="field">
          <%= f.label 'password:' %><br/>
          <%= f.password_field :password %>
      </div>
      <div class="checkbox-inline">
        <%= f.label 'remember me' %>
        <%= f.check_box :remember_me %>
      </div>
      <div> <br> </div>
      <div class="form-actions">
        <div class="col-md-5">
          <div class="field">
              <%= f.submit 'Sign In', class: "btn btn-medium btn-primary" %>&nbsp;&nbsp;&nbsp;
              <%= f.submit 'Clear Form',  class: "btn btn-medium btn-primary", :type => 'reset' %>
              <div> <br> </div>
              <%= link_to 'forgot your password?', :forgot_password %>
            </div>
         </div>
      </div>

    <% end %>
</div>





